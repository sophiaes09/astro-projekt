---
const { text, variant } = Astro.props;
---

<div>
    <a class={variant} href="#formular">{text}</a>
</div>

<style>
a {
   font-family: "Montserrat", sans-serif;
  font-size: 12px;
  display: inline-block;
  color: #ffff;
  text-decoration: none;
  border: 2px solid #324A3E;
  padding: 0.3rem 1.3rem;
  border-radius: 30px;
  background-color: #324A3E;
  font-weight: bold;

}

a:hover{
    border: 2px solid #324A3E;
    color: #324A3E;
    background-color: #ffffff;
     font-weight: bold;
}

.tyk{
   font-size: 16px; 
    padding: 1rem 2rem;
    border-radius: 40px;
}

</style>